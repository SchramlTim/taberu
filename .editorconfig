root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts, tsx, json, scss}]
indent_size = 4

[composer.json]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

# YAML Files
[*.{yml,yaml}]
indent_size = 2
