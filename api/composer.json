{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.3",
        "nyholm/psr7": "^1.3",
        "nyholm/psr7-server": "^1.0",
        "guzzlehttp/psr7": "^1.7",
        "http-interop/http-factory-guzzle": "^1.0",
        "laminas/laminas-diactoros": "^2.5",
        "vlucas/phpdotenv": "^5.3",
        "robmorgan/phinx": "^0.12.7"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Taberu\\": "App/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=rules/phpcs_rules.xml --ignore=/App/Test/* ./App/",
        "phpunit-integration": "phpunit --testdox ./App/Test/Integration/"
    }
}